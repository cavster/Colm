package CourseWorkn;

import java.util.Comparator;

private static class Comparer implements Comparator{

    @Override
    public int compare(SmartPhone sp1, SmartPhone sp2) {
        return (sp1.price < sp2.price ) ? -1: (sp1.price > sp2.price) ? 1:0 ;
    }


